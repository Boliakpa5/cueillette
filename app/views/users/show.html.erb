<h1>C'est la view</h1>

<%= @user.first_name  %>
<% @user.products.each do |product| %>
  <% if product.photo.attached? %>
    <%= cl_image_tag product.photo.key, height: 300, width: 400, crop: :fill %> <br>
  <% end %>
  <%= product.title  %> <br>
  <%= product.category  %> <br>
  <%= button_to "Delete product", destroy_path(product), method: :delete %>

<% end %>

<%= link_to "Rajouter un produit", new_user_product_path(@user) %>
