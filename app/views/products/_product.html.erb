<article class="card-product mb-4">
  <span class="badge rounded-pill text-bg-success"><%= product.category %></span>
  <% if product.photo.attached? %>
    <%= cl_image_tag product.photo.key %>
  <% else %>
    <%= image_tag 'default-vegetables.jpg' %>
  <% end %>
  <div class="card-product-infos">
    <div>
      <h3><%= product.title  %></h3>
      <p><%= product.description.blank? ? "Delicious #{product.title}" : product.description %></p>
    </div>
    <hr>
    <div class="d-flex align-items-center justify-content-between">
      <% if current_user == user %>
        <%= button_to product_path(product), method: :delete, class: "btn-delete " do %>
          <i class="fa-regular fa-trash-can"></i> delete
        <% end %>
      <% else %>
        <%= link_to new_product_order_path(product), class: "btn btn-success" do %>
          <i class="fa-solid fa-basket-shopping"></i> buy
        <% end %>
      <% end %>
      <h3 class="card-product-pricing"><%= product.price %>â‚¬</h3>
    </div>
  </div>
</article>
