
<%= simple_form_for product do |f| %>


  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :category, as: :select, collection: Product::CATEGORIES %>
    <%= f.input :photo, as: :file %>
  </div>

  <div class="form-actions text-end">
    <%= f.button :submit, class:"btn btn-success" %>
  </div>
<% end %>
