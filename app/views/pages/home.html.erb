<div class="container">
  <ul>
    <% @users.where(is_market: true).each do |user| %>
      <li><%= link_to user.market_name, products_path(user_id: user) %></li>
    <% end %>
  </ul>
</div>
<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
