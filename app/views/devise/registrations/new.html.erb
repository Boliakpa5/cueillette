<div class="bg-img-tomate">
  <div class="container">
    <div class="row justify-content-center p-4">
      <div class="p-4 rounded bg-white col-sm-8 col-lg-6">
        <h2>Sign up</h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false})  do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <div class="row">
              <div class="col-sm-6">
                <%= f.input :first_name,
                            required: true,
                            autofocus: true %>
              </div>
              <div class="col-sm-6">
                <%= f.input :last_name,
                            required: true,
                            autofocus: true %>
              </div>
            </div>
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" }%>
            <%= f.input :password,
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :password_confirmation,
                        required: true,
                        input_html: { autocomplete: "new-password" } %>
            <div data-controller="update-form">
              <div class="form-check form-switch ps-3" data-action="change->update-form#togglePart">
                <%= f.input :is_market, class: 'form-check-input', label: "Do you wan't to sell too?" %>
              </div>

              <div class="d-none" data-update-form-target="seller">
                <%= f.input :phone_number,
                            autofocus: true %>
                <%= f.input :address,
                            autofocus: true %>
                <%= f.input :market_name,
                            autofocus: true %>
              </div>
            </div>
          </div>

          <div class="form-actions d-flex justify-content-end align-items-center">
            <div>Allready have an account? <%= render "devise/shared/links" %></div>
            <%= f.button :submit, "Sign up", class: 'btn btn-primary ms-3' %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
