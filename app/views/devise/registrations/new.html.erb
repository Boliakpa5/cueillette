<div class="bg-img-tomate">
  <div class="container">
    <div class="row justify-content-center p-4">
      <div class="p-4 rounded bg-white col-sm-8 col-lg-6">
        <h2>Inscription</h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false})  do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <div class="row">
              <div class="col-sm-6">
                <%= f.input :first_name,
                            required: true,
                            autofocus: true,
                            label: 'Prénom',
                            placeholder: 'Jean' %>
              </div>
              <div class="col-sm-6">
                <%= f.input :last_name,
                            required: true,
                            autofocus: true,
                            label: 'Nom', placeholder: 'Courgette' %>
              </div>
            </div>
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" },
                        placeholder: 'jean.courgette@gmail.com' %>
            <%= f.input :password,
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" },
                        label: 'Mot de passe', placeholder: '•••••••••' %>
            <%= f.input :password_confirmation,
                        required: true,
                        input_html: { autocomplete: "new-password" },
                        label: 'Confirmation du mot de passe', placeholder: '•••••••••' %>
            <div data-controller="update-form">
              <div class="form-check form-switch ps-3" data-action="change->update-form#togglePart">
                <%= f.input :is_market, class: 'form-check-input', label: "Voulez-vous vendre vos récoltes ?", input_html: { :"data-update-form-target" => "checkbox" } %>
              </div>

              <div class="d-none" data-update-form-target="seller">
                <%= f.input :market_name,
                            required: true,
                            autofocus: true,
                            label: 'Nom de votre marché', placeholder: 'Le potager de Jean',
                            hint: "Il s'agit du nom qui sera affiché sur votre page" %>
                <%= f.input :address,
                            required: true,
                            autofocus: true,
                            label: 'Votre adresse', placeholder: '13 rue des récoltes, 10000 CUEILLETTE' %>
                <%= f.input :phone_number,
                            autofocus: true,
                            label: 'Numéro de téléphone', placeholder: 'XX XX XX XX XX' %>
              </div>
            </div>
          </div>

          <div class="form-actions d-flex justify-content-end align-items-center">
            <div>Vous avez déjà un compte ? <%= render "devise/shared/links" %></div>
            <%= f.button :submit, "Inscription", class: 'btn btn-success ms-3' %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
